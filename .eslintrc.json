{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": "error",
        "prefer-arrow-callback": [
          "error",
          { "allowNamedFunctions": true }
        ],
        "func-style": [
          "error",
          "expression",
          { "allowArrowFunctions": true }
        ]
    }
}
